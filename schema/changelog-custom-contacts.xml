<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="custom-contacts" author="antigravity">
        <createTable tableName="tc_contacts">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="userId" type="INT">
                <constraints nullable="false" foreignKeyName="fk_contact_user_id" referencedTableName="tc_users" referencedColumnNames="id" deleteCascade="true" />
            </column>
            <column name="name" type="VARCHAR(128)">
                <constraints nullable="false" />
            </column>
            <column name="email" type="VARCHAR(128)">
                <constraints nullable="false" />
            </column>
            <column name="number" type="VARCHAR(128)">
                <constraints nullable="false" />
            </column>
            <column name="address" type="VARCHAR(256)">
                <constraints nullable="false" />
            </column>
            <column name="status" type="BOOLEAN">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
